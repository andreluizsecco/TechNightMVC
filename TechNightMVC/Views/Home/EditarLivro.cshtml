@model TechNightMVC.Models.Livro
@{
    ViewBag.Title = "Editar Livro";
}

<h2>Editar Livro</h2>
@using (Html.BeginForm("AtualizarLivro", "Home", FormMethod.Post))
{
    <div>
        @Html.LabelFor(x => x.Codigo)<span>: </span>
        @Html.TextBoxFor(x => x.Codigo, new { @readonly = "readonly" })
    </div>
    <div>
        @Html.LabelFor(x => x.Titulo)<span>: </span>
        @Html.EditorFor(x => x.Titulo)
        @Html.ValidationMessageFor(x => x.Titulo)
    </div>
    <div>
        @Html.LabelFor(x => x.Autor)<span>: </span>
        @Html.EditorFor(x => x.Autor)
        @Html.ValidationMessageFor(x => x.Autor)
    </div>
    <div>
        @Html.LabelFor(x => x.Ano)<span>: </span>
        @Html.EditorFor(x => x.Ano)
        @Html.ValidationMessageFor(x => x.Ano)
    </div>
    <div>
        <input type="submit" value="Salvar" />
        @Html.ActionLink("Excluir", "ExcluirLivro", "Home", new { @codigo = Model.Codigo }, null)
        <a href="/livros">Voltar</a>
    </div>
}
<script src="~/Scripts/jquery.validate.js"></script>

